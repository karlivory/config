# Browser
super + w
	google-chrome \
        --no-default-browser-check

super + Return
    st

super + Tab
    dmenu_run

super + shift + n
    xsetroot -name "fsignal:3" # dwm:togglebar

super + shift + t
	theme_changer

super + Escape
	slock

super + shift + F1
	sxhkd_reload

super + F1
    pulsemixer --change-volume -10 && touch $HOME/.config/luastatus/fifo/.volume

XF86AudioLowerVolume
    pulsemixer --change-volume -10 && touch $HOME/.config/luastatus/fifo/.volume

super + F2
    pulsemixer --change-volume +10 && touch $HOME/.config/luastatus/fifo/.volume

XF86AudioRaiseVolume
    pulsemixer --change-volume +10 && touch $HOME/.config/luastatus/fifo/.volume

super + F3
	pulsemixer --toggle-mute && touch $HOME/.config/luastatus/fifo/.volume

XF86AudioMute
	pulsemixer --toggle-mute && touch $HOME/.config/luastatus/fifo/.volume

super + F4
	st -e pulsemixer

super + F11
	autorandr -c && set_default_wallpaper && remaps

super + F12
	pkill -1 dwm
